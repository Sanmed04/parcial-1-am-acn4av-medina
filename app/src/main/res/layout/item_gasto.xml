<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imgCategoriaGasto"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/iconocategoria" />

    <TextView
        android:id="@+id/tvNombreGasto"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_weight="1"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvCantidadGasto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/btnEliminarGasto"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:src="@drawable/baseline_delete_24"
        android:contentDescription="@string/eliminar_gasto"
        android:layout_gravity="center"
        app:tint="@color/red" />


</LinearLayout>
